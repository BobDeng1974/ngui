    ],
    'actions': [
      {
        'action_name': 'gen_glsl_natives',
        'inputs': [
          '../tools/gen-glsl-natives.js',
          '<@(gui_glsl_files)',
        ],
        'outputs': [
          '../out/glsl-shader.h',
          '../out/glsl-shader.cc'
        ],
        'action': [
          '<(node)',
          '<@(_inputs)',
          '__0,__1',
          '',
          '<@(_outputs)',
        ],
      },
      {
        'action_name': 'gen_glsl_natives_es2',
        'inputs': [
          '../tools/gen-glsl-natives.js',
          '<@(gui_glsl_es2_files)',
        ],
        'outputs': [
        '../out/glsl-es2-shader.h',
        '../out/glsl-es2-shader.cc'
        ],
        'action': [
          '<(node)',
          '<@(_inputs)',
          '',
          'ES2',
          '<@(_outputs)',
        ],
      },
      {
        'action_name': 'gen_font_natives',
        'inputs': [
          '../tools/gen-font-natives.js',
          '<@(gui_default_font_files)',
        ],
        'outputs': [
          '../out/font-native.h',
          '../out/font-native.cc',
        ],
        'action': [
          '<(node)',
          '<@(_inputs)',
